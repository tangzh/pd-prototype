{
    "env": {
        "node": true
    },
    "rules": {
        "no-use-before-define": [2, "nofunc"],
        "no-comma-dangle": 0,
        "no-console": 1,
        "eqeqeq": [2, "allow-null"],
        "curly": 0,

        "quotes": [2, "single"],
        "no-underscore-dangle": 0,
        "brace-style": [2, "1tbs"],
        "func-style": [1, "declaration"],
        "no-lonely-if": 1,
        "space-after-keywords": [2, "always"],
        "space-infix-ops": 0,
        "one-var": 1,
        "quote-props": [1, "as-needed"],
        "no-mixed-requires": 0
    }
}